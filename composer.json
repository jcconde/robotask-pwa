{
    "name": "jcconde/robotask-pwa",
    "type": "robo-tasks",
    "authors": [
        {
            "name": "Juan Carlos Conde",
            "email": "juancarlosc@onetree.com"
        }
    ],
    "require": {
        "consolidation/robo": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Onetree\\": "src/"
        }
    },
    "scripts": {
        "code:fixer": "vendor/bin/php-cs-fixer fix src --config=.php_cs.dist.php",
        "code:sniffer": "vendor/bin/phpcbf src --standard=PSR12 && vendor/bin/phpcs src --standard=PSR12",
        "code:md": "vendor/bin/phpmd ./src text cleancode cleancode, codesize, controversial, design, naming, unusedcode"
    }
}
